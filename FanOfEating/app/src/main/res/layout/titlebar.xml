<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_head"
    android:layout_width="match_parent"
    android:layout_height="67.5dp"
    android:paddingTop="20dp">

    <ImageButton
        android:id="@+id/img_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@null"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:src="@mipmap/goback"
        android:visibility="visible" />

    <TextView
        android:id="@+id/jc_tv_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/img_left"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="jc_tv_left"
        android:textColor="#fff"
        android:textSize="18sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/jc_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:text="jc_tv_title"
        android:gravity="center_vertical"
        android:textColor="#fff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/jc_tv_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="jc_tv_right"
        android:textColor="#fff"
        android:textSize="18sp"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/img_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:paddingLeft="7.5dp"
        android:paddingRight="15dp"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/img_center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/img_right"
        android:background="@null"
        android:paddingLeft="15dp"
        android:paddingRight="7.5dp"
        android:visibility="gone" />

</RelativeLayout>